@page "/plan entrenamiento"
@using Gym.WEB.Repositories
@using Gym.Shared.Entidades
@using Gym.Shared.Entities

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService swal


<h3>PlanEntrenamiento</h3>
<Pagination CurrentPage="currentPage"
            TotalPages="totalPages"
            SelectedPage="SelectedPage" />

<div class="mb-3">
    <a class="btn btn-primary" href="/planenetrenamineto/create">Nuevo planentrenamiento</a>
</div>

<GenericList MyList="planentrenamiento">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>PlanEntrenamiento</th>
                    <th style="width:220px">Estados / Departamentos</th>
                    <th style="width:280px"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var PlanEntrenamiento in planentrenamiento!)
                {
                    <tr>
                        <td>
                            @PlanEntrenamiento.Id_Plan
                        </td>
                        <td>
                            <a href="/planentrenamiento/edit/@PlanEntrenamiento.Id_Plan" class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(PlanEntrenamiento))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<PlanEntrenamiento>? planentrenamiento { get; set; }
    private int currentPage = 1;
    private int totalPages;


    protected async override Task OnInitializedAsync()
    {
        await LoadAsync();

    }

    private async Task SelectedPage(int page)
    {
        currentPage = page;
        await LoadAsync(page);
    }

    private async Task LoadAsync(int page = 1)
    {
        string url1 = $"api/planentrenamiento?page={page}";
        string url2 = $"api/planentrenamiento/totalPages";

        var responseHppt = await repository.Get<List<PlanEntrenamiento>>(url1);
        var responseHppt2 = await repository.Get<int>(url2);
        planentrenamiento = responseHppt.Response!;
        totalPages = responseHppt2.Response!;
    }


    private async Task Delete(PlanEntrenamiento planEntrenamiento)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/planentrenamiento/{planEntrenamiento.Id_Plan}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await LoadAsync();
        }
    }
}

}


}
}


