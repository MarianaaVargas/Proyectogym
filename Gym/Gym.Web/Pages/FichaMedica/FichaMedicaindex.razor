@page "/ficha medica"
@using Gym.WEB.Repositories
@using Gym.Shared.Entidades

@inject IRepository repository


<h3>FichaMedica</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/fichamedica/create">Nueva FichaMedica</a>
</div>

<GenericList MyList="fichaMedica">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>FichaMedica</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var FichaMedica in fichaMedica!)
                {
                    <tr>
                        <td>
                            @FichaMedica.Id_Ficha
                        </td>
                        <td>
                            <a class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger">Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<FichaMedica>? fichaMedica { get; set; }

    protected async override Task OnInitializedAsync()
    {
        var responseHppt = await repository.Get<List<FichaMedica>>("/api/ficha medica");
        fichaMedica = responseHppt.Response!;
    }
}


